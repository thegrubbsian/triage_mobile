require "./build/jst_filter"
require "rake-pipeline-web-filters"

JAVASCRIPTS = [
  "lib/jquery",
  "lib/jquery.mobile",
  "lib/jquery.ui",
  "lib/jquery.ui.touch",
  "lib/underscore",
  "lib/underscore_extensions",
  "lib/moment",
  "lib/backbone",
  "lib/backbone_base",
  "lib/backbone_localstorage",
  "lib/backbone_proxy_events",
  "lib/ratchet",
  "namespaces",
  "config",
  "helpers",
  "models/user",
  "models/task",
  "collections/tasks",
  "view_handler",
  "views/window",
  "views/page",
  "views/sign_in",
  "views/sign_up",
  "views/task_detail",
  "views/task_item",
  "views/task_list",
  "application"
]

output "www"

input "src/javascripts" do

  match "**/*.coffee" do
    puts "[assets/coffee] compiling coffee files"
    coffee_script
  end

  JAVASCRIPTS.reverse.each do |file|
    puts "[assets/js] processing #{file}"
    match("#{file}.js") { concat "application.js" }
  end

end

input "src/stylesheets" do

  match "**/*.scss" do
    puts "[assets/scss] processing sass"
    sass
  end

  match "**/*.css" do
    puts "[assets/css] concatenating css"
    concat "application.css"
  end

end

input "src/templates" do

  match "**/*.jst" do
    puts "[assets/jst] compiling templates"
    filter JstFilter, "templates.js", "templates"
  end

end
